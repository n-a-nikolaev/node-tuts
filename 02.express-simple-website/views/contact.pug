extends layout

block content
  h1.page-title= title
  form(action="contact" method="POST")
    .form-group
      label(for='username') Name
      input(type='text' id='username' class='form-control' name='username' placeholder='Your name')
    .form-group
      label(for='email') Email
      input(type='email' id='email' class='form-control' name='email' placeholder='Your email')
    .form-group
      label(for='subject') Subject
      input(type='text' id='subject' class='form-control' name='subject' placeholder='Subject')
    .form-group
      label(for='message') Message
      textarea#message(class='form-control' name="message", cols="30", rows="10" placeholder='Message')
    .form-group
      button(type='submit' class='btn btn-primary') Submit